block content 
    form(action="/transfer/create", method="POST")
        input(type="hidden", name="_csrf", value=csrfToken)
        .form-group
            label(for="account") Account
            input#account.form-control(type="text", name="account")
        .form-group
            label(for="amount") Amount
            input#amount.form-control(type="text", name="amount")

        button.btn.btn-primary Transfer