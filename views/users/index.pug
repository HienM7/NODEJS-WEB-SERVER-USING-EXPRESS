extends ../layouts/common

block content
    h1 Users
        a.ml-3.btn.btn-primary(href="/users/create") Create user
    .d-flex.justify-content-end
        form.d-flex(action="/users/search")
            input.form-control(type="text", name="q" value=q)
            button.btn.btn-primary Search
    table.table
        tr  
            th Avatar   
            th Name
            th Phone
            th Actions

        each user in users
            tr 
                td
                    if !user.avatar
                        img(src="/images/logo.jpg", width="64")
                    else
                        img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/view/" + user.id) View